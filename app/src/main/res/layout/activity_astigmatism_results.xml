<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Astigmatism.AstigmatismResults">


    <TextView
        android:id="@+id/titleTextView2"
        android:layout_width="279dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="Test Results"
        android:textAlignment="center"
        android:textColor="#0F1056"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Great !"
        android:textAlignment="center"
        android:textColor="#0F1056"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView2" />

    <TextView
        android:id="@+id/resultTextView2"
        android:layout_width="332dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:text="You seem to show no signs of Astigmatism in this test."
        android:textAlignment="center"
        android:textColor="#0F1056"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbpageicon" />

    <TextView
        android:id="@+id/resultTextView8"
        android:layout_width="330dp"
        android:layout_height="83dp"
        android:layout_marginTop="4dp"
        android:text="Keep a check on your vision by regularly visiting your eye care professional."
        android:textAlignment="center"
        android:textColor="#560F17"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView2" />

    <Button
        android:id="@+id/share_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#0F1056"
        android:gravity="center"
        android:text="Share Results"
        android:textColor="@color/white"
        app:cornerRadius="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView8" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#0F1056"
        android:gravity="center"
        app:cornerRadius="30dp"
        android:text="Back to Home"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_button" />

    <ImageView
        android:id="@+id/cbpageicon"
        android:layout_width="223dp"
        android:layout_height="219dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView"
        app:srcCompat="@drawable/baseline_mood_24" />

</androidx.constraintlayout.widget.ConstraintLayout>