<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorBlindTest.ColorTestResults">

    <TextView
        android:id="@+id/cbResults"
        android:layout_width="261dp"
        android:layout_height="56dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="75dp"
        android:gravity="center"
        android:text="Test Results"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cbLeftEyeResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/cbRightEyeResults"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbResultsLeftDes" />

    <TextView
        android:id="@+id/cbRightEyeResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cbLeftEyeResults"
        app:layout_constraintTop_toBottomOf="@+id/cbResultsRightDes" />

    <Button
        android:id="@+id/cbResultsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="95dp"
        android:text="CONTINUE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbLeftEyeResults"
        app:layout_constraintVertical_bias="0.864" />

    <TextView
        android:id="@+id/cbResultsLeftDes"
        android:layout_width="153dp"
        android:layout_height="41dp"
        android:layout_marginTop="188dp"
        android:gravity="center"
        android:text="Left Eye"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/cbResultsRightDes"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbResults" />

    <TextView
        android:id="@+id/cbResultsRightDes"
        android:layout_width="148dp"
        android:layout_height="41dp"
        android:layout_marginTop="186dp"
        android:gravity="center"
        android:text="Right Eye"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cbResultsLeftDes"
        app:layout_constraintTop_toBottomOf="@+id/cbResults" />
</androidx.constraintlayout.widget.ConstraintLayout>